@model SKSLearningSystem.Areas.Admin.Models.AssignCourseViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Assign Courses</h2>

@using (Html.BeginForm("CompleteAssignment", "Admin"))
{
    <div id = "container" >
            <div class="ListContiner">
                @for (int i = 0; i < Model.Users.Count; i++)
                {
                    <p>@Html.EditorFor(u => Model.Users[i].Checked)@Html.HiddenFor(x => Model.Users[i].UserName) @Model.Users[i].UserName</p>
                }
            </div>
            <div class="ListContiner">
                @for (int i = 0; i < Model.Courses.Count; i++)
                {
                    <p>@Html.EditorFor(u => Model.Courses[i].Checked) @Html.HiddenFor(x => Model.Courses[i].Name)</p>
                }
            </div>
        </div>
        <div id="butt">
            <input type="submit" value="Assign Courses">
        </div>
}