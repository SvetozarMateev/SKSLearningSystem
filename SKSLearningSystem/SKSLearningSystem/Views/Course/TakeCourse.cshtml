@model SKSLearningSystem.Models.TakeCourseModel

@{
    ViewBag.Title = "TakeCourse";
}

<meta name="viewport" content="width=device-width, initial-scale=1">

<h2>High Quality Code Course</h2>

<div id="myCarousel" class="carousel carousel-background slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="item active">
            <img class="courseImg" src="@Url.Action("RenderImage", new {id = 1})", style="width:100%;">
        </div>

        @foreach (var image in Model.Images)
        {
            <div class="item">
                <img class="courseImg" src="@Url.Action("RenderImage", new {id = image.Id})" , style="width:100%;">
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>

</div>

<div id="examButton">
    <input class="examBtn" type="submit" value="Take exam">
</div>



@section styles{
    @Styles.Render("~/Content/TakeCourse")
}