@model SKSLearningSystem.Areas.Admin.Models.UserViewModel

<div id="containerUserProfile">
    <div id="profilePicture">
        
        @using (Html.BeginForm("ChangeProfilePicture", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "formForCourse" }))
        {
            @Html.LabelFor(u => u.ProfilePictureFile, "Click here to select photo")

            @Html.TextBoxFor(model => model.ProfilePictureFile, "",
       new { @type = "file", @multiple = "multiple", @class = "inputField" })

            <button type="submit" class="btn-upload">Upload</button>

        }
    </div>
    <div id="personalData">
        <p id="userName">@Model.UserName</p>
    </div>
    <div id="userCourses">
        @for (int i = 0; i < Model.CourseStates.Count; i++)
        {
            <p>@Model.CourseStates[i].CourseName</p>
        }
    </div>
</div>